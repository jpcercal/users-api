{
  "name": "users-api",
  "version": "1.0.0",
  "description": "users-api is a powerful and scalable REST API for creating and listing user data.",
  "author": "Jo√£o Paulo Cercal <jpcercal@gmail.com>",
  "engines": {
    "node": ">= 18.19.0"
  },
  "main": "dist/src/main.js",
  "scripts": {
    "start": "ts-node src/main.ts",
    "start:watch": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf coverage dist tmp",
    "lint": "eslint . --ext .ts --ext .mts --fix",
    "lint:check": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write .",
    "prettier:check": "prettier --config .prettierrc --check .",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "db:migration:generate": "typeorm-ts-node-commonjs migration:generate --pretty --dataSource src/app-data-source.ts src/migrations/migration",
    "db:migration:migrate": "typeorm-ts-node-commonjs migration:run --dataSource src/app-data-source.ts"
  },
  "dependencies": {
    "cors": "~2.8",
    "dotenv": "~16.4",
    "express": "~4.18",
    "express-openapi-validator": "^5.1.3",
    "http-status": "^1.7.3",
    "mysql": "^2.18.1",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "sqlite3": "^5.1.7",
    "tslib": "~2.6",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "~2.8",
    "@types/dotenv": "~8.2",
    "@types/express": "~4.17",
    "@types/jest": "~29.5",
    "@types/node": "~18.19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "~6.19",
    "@typescript-eslint/parser": "~6.19",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~27.6",
    "eslint-plugin-prettier": "~5.1",
    "jest": "~29.7",
    "prettier": "~3.2",
    "rimraf": "~5.0",
    "supertest": "^6.3.4",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "ts-node": "~10.9",
    "ts-node-dev": "~2.0",
    "typescript": "~5.3"
  }
}
